---
import { t, withLocale } from "../utils/i18n";
const { currentLocale } = Astro;
const locale = (currentLocale || "en") as "ru" | "en";


const links = [
    { href: withLocale(locale, `/about`), label: t(locale, "links.about") },
    { href: withLocale(locale, `/interiors`), label: t(locale, "links.interiors") },
    { href: withLocale(locale, `/before-after`), label: t(locale, "links.before-after") },
    { href: withLocale(locale, `/contact`), label: t(locale, "links.contact") },
    { href: withLocale(locale, `/press`), label: t(locale, "links.press") },
];
---

<footer>
    <div class="contact">
        <a>
            {t(locale, "footer.email")}
        </a>
        <a>
            {t(locale, "footer.phone")}
        </a>
    </div>

    <div class="main">
        <h3>
            {t(locale, "footer.name")}
        </h3>
        <p>
            <em>
                {t(locale, "footer.desc")}
            </em>
        </p>
    </div>

    <div class="links">
        {links.map(link => (
            <a href={link.href}>
                {link.label}
            </a>
        ))}
    </div>
</footer>


<style>
    footer {
        background-color: #e0e0db;
        padding: 4vw 6vw 6.6vmax 6vw;
        box-sizing: border-box;
        display: flex;
        justify-content: space-between;
    }
    
    footer div {
        display: flex;
        flex-direction: column;
    }

    h3 {
        font-family: 'GS Black';
        color: black;
        font-size: calc(1.2 * 1.2vw + 1rem);
        margin: 0;
    }

    p {
        margin: 0;
    }

    a {
        color: #253551;
        text-decoration: #253551 underline;
        line-height: 1.6rem;
    }

    .contact, .main {
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
    }

    .links {
        display: flex;
        flex-direction: row;
        align-items: center;
        gap: 7px;
    }

    @media (max-width: 768px) {
        footer {
            flex-direction: column;
            align-items: center;
            gap: 68px;
        }

        .links {
            flex-direction: column;
            align-items: center;
        }
    }
    
</style>
