---
import { t } from "../utils/i18n";

const { currentLocale, url } = Astro;
const locales = ["ru", "en"] as const;
const locale = (currentLocale || "en") as "ru" | "en";

const pathWithoutLocale = url.pathname.replace(/^\/(ru|en)/, "");
---
<nav class="lang-switcher">
  {locales.map(lang => {
    const isActive = lang === locale;

    return (
      <a
        href={`/${lang}${pathWithoutLocale}`}
        class={`lang-item ${isActive ? "active" : ""}`}
        aria-current={isActive ? "true" : undefined}
      >
        {lang.toUpperCase()}
      </a>
    );
  })}
</nav>


<style>
 .lang-switcher {
    display: inline-flex;
    border: 1px solid #ddd;
    border-radius: 999px;
    padding: 2px;
    background: #fff;
  }

  .lang-item {
    min-width: 36px;
    text-align: center;
    padding: 6px 12px;
    font-size: 13px;
    font-weight: 500;
    text-transform: uppercase;
    text-decoration: none;
    color: #666;
    border-radius: 999px;
    transition:
      background-color 0.2s ease,
      color 0.2s ease;
  }

  .lang-item:hover {
    color: #000;
  }

  .lang-item.active {
    background: #000;
    color: #fff;
    pointer-events: none;
  }

</style>