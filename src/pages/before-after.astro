<style>
  .ba-gallery {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(700px, 1fr));
    gap: 2rem;
    padding: 2rem 5%;
  }
  @media (max-width: 768px) {
    .ba-gallery {
      grid-template-columns: 1fr;
      gap: 1rem;
      padding: 1rem;
    }

    .ba-handle {
      width: 6px;
    }

    .ba-handle::before {
      width: 56px;
      height: 56px;
    }

    .content-section {
      padding: 4vmax 2vw;
    }

    .ba-card {
      border-radius: 12px;
    }
  }
  .ba-card {
    background: #fff;
    border-radius: 16px;
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
    overflow: hidden;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  .ba-card:hover {
    transform: translateY(-6px);
    box-shadow: 0 12px 28px rgba(0, 0, 0, 0.2);
  }

  .ba-container {
    position: relative;
    aspect-ratio: 16 / 10;
    width: 100%;
    overflow: hidden;
    /* transform: scale(0.85); 0.85 = 85% от исходного размера */
    /* transform-origin: center; */
  }

  .ba-container,
  .ba-container * {
    user-select: none;
    -webkit-user-drag: none;
  }

  .ba-container img {
    position: absolute;
    top: 50%;
    left: 50%;
    height: 100%;
    width: 100%;
    object-fit: contain;
    transform: translate(-50%, -50%);
    background-color: #000;
  }

  .ba-container .before {
    clip-path: inset(0 50% 0 0);
  }

  .ba-handle {
    position: absolute;
    top: 0;
    bottom: 0;
    left: 50%;
    width: 4px;
    background: #fff;
    cursor: ew-resize;
    z-index: 10;
    transition: background 0.2s ease;
  }

  .ba-handle:hover {
    background: #ff5f5f;
  }

  .ba-handle::before {
    content: "";
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background: rgba(0, 0, 0, 0.6);
    border: 2px solid #fff;
  }

  .content-section {
    padding: 6.6vmax 4vw;
    display: flex;
    justify-content: center;
    margin: 0 auto;
    box-sizing: border-box;
  }

  .content-text {
    text-align: center;
    gap: 32px;
  }

  .content-text h1 {
    font-size: calc(3 * 1.2vw + 1rem);
    line-height: 100%;
    font-family: 'GS Black' !important;
    letter-spacing: 1px;
  }

  .content-text em {
    font-size: calc((1.2 - 1) * 1.2vw + 1rem);
    color: #333;
  }
</style>

