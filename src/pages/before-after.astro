    window.addEventListener('load', () => {
    document.querySelectorAll('.ba-container').forEach((container) => {
        const before = container.querySelector<HTMLImageElement>('.before');
        const handle = container.querySelector<HTMLImageElement>('.ba-handle');
        if (!before || !handle) return;

        function setPosition(x:number) {
          
          const rect = container.getBoundingClientRect();
          let offset = x - rect.left;
          offset = Math.max(0, Math.min(offset, rect.width));
          const percent = (offset / rect.width) * 100;
          if (!before || !handle) return;
          before.style.clipPath = `inset(0 ${100 - percent}% 0 0)`;
          handle.style.left = `${offset}px`;
        }

        let dragging = false;

        const start = (e: MouseEvent | TouchEvent) => {
          dragging = true;
          if ('touches' in e) setPosition(e.touches[0].clientX);
          else setPosition((e as MouseEvent).clientX);
        };

        const move = (e: MouseEvent | TouchEvent) => {
          if (!dragging) return;
          if ('touches' in e) setPosition(e.touches[0].clientX);
          else setPosition((e as MouseEvent).clientX);
        };

        const stop = () => (dragging = false);

        handle.addEventListener('mousedown', start);
        handle.addEventListener('touchstart', start);
        window.addEventListener('mousemove', move);
        window.addEventListener('touchmove', move);
        window.addEventListener('mouseup', stop);
        window.addEventListener('touchend', stop);

        // Автоцентрирование при загрузке
        // setTimeout(() => setPosition((container as HTMLElement).offsetWidth / 2), 200);
      });
    });

  </script>

